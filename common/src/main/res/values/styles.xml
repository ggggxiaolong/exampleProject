<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:background">@color/colorPrimary</item>
  </style>

  <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/textPrimary</item>
  </style>

  <style name="TextTitle">
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textSize">@dimen/text_subTitle</item>
  </style>

  <style name="TextContent">
    <item name="android:textSize">@dimen/text_normal</item>
    <item name="android:textColor">@color/textSecondly</item>
  </style>

  <style name="TextLabel">
    <item name="android:textSize">@dimen/text_normal</item>
    <item name="android:textColor">@color/textPrimary</item>
  </style>

</resources>
